<h1>Index</h1>
<h3><%= link_to 'New', new_category_path%></h3>
<table class="table table-hover">
 <thead>
  <tr>
   <th scope="col">#</th>
   <th scope="col">Name</th>
   <th scope="col">Description</th>
   <th scope="col">Handle</th>
  </tr>
 </thead>
 <tbody>
  <% @categories.each do |category| %>
   <tr>
    <th scope="row"></th>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td>
       <%= link_to 'Edit', edit_category_path(category) %>
       <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: 'Are you sure to delete this domain?'} %>
    </td>
   </tr>
  <% end %>
 </tbody>
</table>
