<h1>Index</h1>
<h3><%= link_to 'New', new_domain_path%></h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
      <th scope="col">FTP_USR</th>
      <th scope="col">FTP_PWD</th>
      <th scope="col">DB_USR</th>
      <th scope="col">DB_PWD</th>
      <th scope="col">Active</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th scope="row"></th>
        <td><%=  link_to @domain.name, domain_path(@domain) %></td>
        <td><%=  @domain.description %></td>
        <td><%=  @domain.category.name %></td>
        <td><%=  @domain.ftp_usr %></td>
        <td><%=  @domain.ftp_pwd %></td>
        <td><%=  @domain.db_usr %></td>
        <td><%=  @domain.db_pwd %></td>
        <td><%=  @domain.try('active') %></td>
        <td>
            <%=  link_to 'Edit', edit_domain_path(@domain) %>
            <%=  link_to 'Del', domains_path(@domain), method: :delete, data: {confirm: 'Are you sure to delete this domain?'} %>
        </td>
      </tr>
  </tbody>
</table>
